<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"

        >

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/specific_text_name"
        android:layout_height="wrap_content"
        android:text="Car Name will be in here">
    </TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/specific_text_type"
            android:layout_height="wrap_content"
            android:layout_below="@id/specific_text_name"
            android:text="Car type will be in here">

    </TextView>

        <TextView
            android:id="@+id/specific_text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/specific_text_type"
            android:layout_marginTop="-1dp"
            android:text="Car price will be in here"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/specific_text_description"
            android:layout_height="wrap_content"
            android:layout_below="@id/specific_text_price"
            android:text="Car Description will be in here">
        </TextView>
    </RelativeLayout>


</LinearLayout>